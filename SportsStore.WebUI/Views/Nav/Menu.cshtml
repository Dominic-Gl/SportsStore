@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Home","List", "Product",null, new {@class = "btn btn-block btn-default btn-lg"})

@foreach (var categoryName in Model)
{
    @Html.RouteLink(categoryName, new { conroller = "Product", action = "List", category = categoryName, page = 1 }, 
        new
        {
            @class = string.Format("btn btn-block btn-default btn-lg{0}", (categoryName == ViewBag.SelectedCategory ? " btn-primary" : ""))
        })
}